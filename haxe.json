{
  "build" : {
    "-D"   : ["no-deprecation-warnings"],
    "-lib" : ["tink_core","stx_pico","stx_fail"],
    "-cp"  : ["src/main/haxe"],
    "unit" : {
      "--macro" : [
        "allowPackage('sys')",
        "include('stx.Nano',true,[])",
        "include('stx.nano',true,[])", 
        "include('stx.Sys',true,[])",
        "include('stx.sys',true,[])"
      ],
      "interp"  : {
        "--interp" : true
      },
      "cpp"  : {
        "--cpp" : "build/unit/cpp"
      },
      "cppia"  : {
        "-D" : ["cppia"],
        "--cppia" : "build/unit/cppia/main.cppia"
      },
      "java"  : {
        "--java" : "build/unit/java"
      },
      "hl"  : {
        "--verbose" : true,
        "--hl" : "build/unit/hl/main.hl"
      },
      "node" : {
        "--remap" : "sys:sys",
        "-lib" : ["hxnodejs"],
        "--js" : "build/unit/js/main.js"
      }
    },
    "main" : {
      "-main"     : "Main",
      "hashlink" : {
        "-hl"   : "build/test/hl/main.hl" 
      },
      "interp"  : {
        "--interp"  : true
      },
      "cppia" :{
        "-D" : "cppia",
        "--cppia" : "build/main/cppia/main.cppia"
      } 
    },
    "bootstrap" : {
      "hl" : {
        "--verbose" : "true",
        "--hl"  : "build/test/hl/main.hl"
      }
    },
    "test" : {
      "-lib"  : ["stx_test"],
      "-D" : ["no-deprecation-warnings"],
      "-main" : "stx.nano.Test",
      "js" : {
        "node" : {
          "-lib" : ["hxnodejs"],
          "--js"  : "build/test/node/main.js"
        }
      },
      "hashlink" : {
        "--verbose" : true,
        "--hl"  : "build/test/hashlink/main.hl"
      },
      "cppia" :{
        "-D" : "cppia",
        "--cppia" : "build/test/cppia/main.cppia"
      },
      "interp" : {
        "--interp" : true
      }
    },
    "doc" : {
      "make" : {
        "--macro" : [
          "exclude('',true)",
          "include('stx.Nano',true,[])",
          "include('stx.nano',true,[])", 
          "include('stx.Sys',true,[])",
          "include('stx.sys',true,[])"
        ],
        "--json" : "build/doc/doc.json"
      },
      "show" : {
        "-D" : ["stx.parse.switches.debug=true"],
        "--resource" : "build/doc/doc.json@doc",
        "-cp"    : "src/doc",
        "-lib"    : "stx_parse",
        "--main"  : "Doc",
        "build" : {
          "-lib" : "hxnodejs",
          "--js" : "build/doc/node/main.js"
        }
      }
    }
  },
  "run" : {
    "hashlink"      : [["hl","build/test/hl/main.hl"]],
    "test.js.node"  : [
      ["hx","build","test/js/node"],
      ["node","build/test/node/main.js"]
    ],
    "test::hl" : [
      ["hx","build","test/hl"],
      ["hl","build/test/hl/main.hl"]
    ]
  }
}
